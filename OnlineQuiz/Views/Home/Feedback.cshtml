@model OnlineQuiz.Models.Feedback

@{
    ViewData["Title"] = "Feedback";
}

<h1>Feedback</h1>

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Feedback">
